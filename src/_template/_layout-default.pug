block config-block
  - title = site.page_name ? [site.page_name, site.name].join(' | ') : site.name

//- mixin
include /_mixin/_svg-icon
include /_mixin/_picture

doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=Edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
    if site.description
      meta(name="description", content=site.description)
    if site.keywords && site.keywords.length
      meta(name="keywords", content=site.keywords.join ? site.keywords.join(', ') : site.keywords)
    if site.favicon_url
      link(rel="shortcut icon", href=site.favicon_url, type="image/vnd.microsoft.icon")
      link(rel="icon", href=site.favicon_url, type="image/vnd.microsoft.icon")
    if site.webclipicon_url
      meta(name="apple-mobile-web-app-capable", content='yes')
      meta(name="apple-mobile-web-app-status-bar-style", content=site.ios_status_bar || 'default')
      link(rel="apple-touch-icon", href=site.webclipicon_url)

    // ogp
    if site.facebook_app_id
      meta(property="fb:app_id", content=site.facebook_app_id)
    if site.url
      meta(property="og:url", content=site.url)
    if site.ogp_image_url
      meta(property="og:image", content=site.ogp_image_url)
    meta(property="og:type", content=site.ogp_type || "website")
    meta(property="og:title", content=site.title)
    meta(property="og:site_name", content=site.name)
    meta(property="og:description", content=site.description)
    meta(property="og:locale", content=site.ogp_locale || "ja_JP")

    // twitter ogp
    meta(property="twitter:card", content=(site.ogp_image_url ? 'summary_large_image' : 'summary'))
    meta(property="twitter:title", content=site.title)
    meta(property="twitter:description", content=site.description)
    if site.ogp_image_url
      meta(property="twitter:image", content=site.ogp_image_url)
    if site.twitter_card_owner
      meta(property="twitter:site", content=site.twitter_card_owner)
      meta(property="twitter:creator", content=site.twitter_card_owner)

    if site.url
      // canonical url
      link(rel="canonical" href=site.url)

    // stylesheet
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700;900&family=Roboto:wght@400;500;700&display=swap", rel="stylesheet")

    block stylesheet-block
      link(rel="stylesheet", href="/assets/styles/app.css")
  body
    .l-wrapper
      block content-block

    // javascript
    block javascript-block
      script(src="/assets/scripts/vendor.js")
      script(src="/assets/scripts/app.js")
